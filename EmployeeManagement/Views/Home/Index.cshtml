<!--_ViewImports.cshtml notation, namespace designated there-->
@model IEnumerable<Employee>

@{
    // Layout Vew
    // Layout = "~/Views/Shared/_Layout.cshtml";

    // Setup for the Webpage Title
    ViewBag.Title = "Employee List";
}

<div class="card-deck">
    @foreach (var employee in Model)
    {
        // Determine if there is an image for an employee or to use NoImage.jpg
        var photoPath = "~/images/" + (employee.PhotoPath ?? "NoImage.jpg");

        <div class="card m-3" style="min-width:20.5%; max-width:30.5%">
            <div class="card-header">
                <h3>@employee.Name</h3>
            </div>
            <!--ASP-APPEND-VERSION allows the image to be pulled from the CACHE if not changed, from the server if changed-->
            <img class="card-img-top imageThumbNail" src="@photoPath" asp-append-version="true"/>
            <div class="card-footer text-center">
                <!--Tag Helper-->
                <a asp-controller="home" asp-action="details" asp-route-id="@employee.Id"
                   class="btn btn-primary m-1">View</a>
                <a asp-controller="home" asp-action="edit" asp-route-id="@employee.Id"
                   class="btn btn-primary m-1">Edit</a>
                <a href="#" class="btn btn-danger m-1">Delete</a>
            </div>
        </div>
    }
</div>